<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4">
    <h4 class="text-center">Add Restaurant</h4>
      <form name="create-restaurant-form" id="create-restaurant-form" method="post">
        <div class="form-group">
          <input class="form-control" type="text" id="name" name="name" required value="{{input.name}}" placeholder="Restaurant Name" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="clientname" name="clientname" required value="{{input.clientname}}" placeholder="Client Name" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="address" name="address" required value="{{input.address}}" placeholder="Address" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="city" name="city" required value="{{input.city}}" placeholder="City" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="country" name="country" required value="{{input.country}}" placeholder="Country" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="latitude" name="latitude" required value="{{input.latitude}}" placeholder="Latitude" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="longitude" name="longitude" required value="{{input.longitude}}" placeholder="Longitude" />
        </div>
        <div class="form-group">
          <input class="form-control" type="text" id="currentRush" name="currentRush" required value="{{input.currentRush}}" placeholder="Current Rush"/>
        </div>
        <div class="btn-group pull-right">
          <input class="btn btn-primary" type="submit" value="Add Restaurant" />
        </div>
        <span style="color:red;">{{error}}</span>
      </form>
    </div>
    </div>
  </div>
</div>

