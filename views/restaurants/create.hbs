<div class="widget">
  <form name="create-restaurant-form" id="create-restaurant-form" method="post">
    <div class="form-group">
      <label for="name">Restaurant name</label>
      <input type="text" id="name" name="name" required value="{{input.name}}" />
    </div>
    <div class="form-group">
      <label for="clientname">Clientname</label>
      <input type="text" id="clientname" name="clientname" required value="{{input.clientname}}" />
    </div>
    <div class="form-group">
      <label for="address">address</label>
      <input type="text" id="address" name="address" required value="{{input.address}}" />
    </div>
    <div class="form-group">
      <label for="city">city</label>
      <input type="text" id="city" name="city" required value="{{input.city}}" />
    </div>
    <div class="form-group">
      <label for="country">country</label>
      <input type="text" id="country" name="country" required value="{{input.country}}" />
    </div>
    <div class="form-group">
      <label for="latitude">latitude</label>
      <input type="text" id="latitude" name="latitude" required value="{{input.latitude}}" />
    </div>
    <div class="form-group">
      <label for="longitude">longitude</label>
      <input type="text" id="longitude" name="longitude" required value="{{input.longitude}}" />
    </div>
    <div class="form-submit">
      <input type="submit" value="Create my account" />
    </div>
    <span style="color:red;">{{error}}</span>
  </form>
</div>