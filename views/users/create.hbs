<br><br><br>
<div class="col-sm-4 col-lg-6 col-lg-offset-3 col-sm-offset-3">
  <div id="myCarouselV" class="carousel thumbnail fade">
    <div class="carousel-inner">
      <!-- Slide 1 -->
      <div class="item active">
          <div class="carousel-caption">
            <p class="lead text-muted">Sign Up</p>
            <form class="form-horizontal" name="create-user-form" id="create-user-form" method="post">
              <div class="form-group">
                <div class="col-lg-12">
                  <input class="form-control" placeholder="First Name" type="text" id="firstName" name="firstName" required value="{{input.firstName}}">
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-12">
                  <input class="form-control" placeholder="Last Name" type="text" id="lastName" name="lastName" required value="{{input.lastName}}">
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-12">
                  <input class="form-control"placeholder="Email" type="email" id="email" name="email" required value="{{input.email}}">
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-12">
                  <input class="form-control" placeholder="Password" type="password" id="password" name="password" required value="{{input.password}}" autocomplete="off">
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-12">
                  <input class="form-control" placeholder="Confirm Password" type="password" id="confirm_password" name="confirm_password" required value="{{input.confirm_password}}" autocomplete="off"> 
                </div>
              </div>
              <div class="form-group">
                <center><div class="col-lg-6 col-lg-offset-3">
                  <input type="submit" class="btn btn-primary btn-block" value="Create my account" />
                </div></center>
              </div>
              <span style="color:red;">{{error}}</span>
            </form>
          </div>
      </div>
  </div>        
</div>