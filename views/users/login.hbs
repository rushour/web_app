<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-4 col-sm-offset-3">
      <div style="width:500px;height:180px;">
        <h2 style="font-size:40px;">Welcome! Please log in.</h2>
        <a href="/users/auth/facebook">Login with Facebook</a>
      </div>

      <div class="widget">
        <form name="login-form" id="login-form" method="post" action="/users/login">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />
          </div>
          <div class="form-group">
            <label for="rememberMe">Remember me</label>
            <input type="checkbox" id="rememberMe" name="rememberMe"  />
          </div>
          <div class="form-submit">
            <input type="submit" value="Log in" />
            {{#if error}}
            <div style="color:red;">{{error}}</div>
            {{/if}}
            <div class="margin-top-30">
              or <a href="/users/create">Create an account</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>